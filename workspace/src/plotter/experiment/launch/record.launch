<launch>
    <arg name="DIR" default="$(find experiment)/launch/bag/Nic31_03"/>
    <arg name="SUBJECT" default="jin_response"/>
    <node pkg="experiment" type="experiment_recorder" name="bag_recorder" output="screen"> 
        <param  name="save_dir" value="$(arg DIR)" type="str"/>
        <param  name="subject" value="$(arg SUBJECT)" type="str"/>
        <rosparam command="load" file="$(find experiment)/launch/config/exp_param.yaml"/>
    </node>
</launch>